while True:
    print('Choose a or b: \n\t a)The number of letters  \n\t b)Sort words ')
    a_or_b = input('Enter a or b:')
    if a_or_b in ['a', 'b']:
        break
    else:
        print('Please choose a or b. You have chosen something else')

if a_or_b == 'a':
    chars = {}
    word = input('Enter words:').replace(' ', '')
    word = sorted(word)
    for char in word:
        if char in chars:
            chars[char] += 1
        else:
            chars[char] = 1

    for char, number in chars.items():
        print(f"{char} - {number}")
else:
    words = input('Enter some words:').split(' ')
    words = sorted(words)
    for word in words:
        print(word)
